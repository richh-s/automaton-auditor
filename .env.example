# --- LangChain / LangSmith ---
# Enable LangSmith tracing for full forensic observability of the agent swarm
LANGCHAIN_TRACING_V2=true
# Your LangSmith API key (starts with ls__)
LANGCHAIN_API_KEY=your_key_here
# The project name in your LangSmith dashboard
LANGCHAIN_PROJECT=automaton-auditor

# --- LLM Providers ---
# Required for Phase 3 (Judicial Layer) analysis and synthesis
OPENAI_API_KEY=your_openai_key_here
# Optional: Alternative inference model for persona-driven diversity
ANTHROPIC_API_KEY=your_anthropic_key_here

# --- Forensic Tools ---
# Personal Access Token for auditing private repos or avoiding public rate limits
GITHUB_TOKEN=your_github_token_here
# Required for DocAnalyst to perform external documentation cross-referencing
TAVILY_API_KEY=your_tavily_key_here
